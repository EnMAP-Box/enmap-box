[flake8]
ignore =
    C901  # allow complex functions
    D203
    E122  # continuation line missing indentation or outdented
    E126, # allow continuation line over-indented for hanging indent
    E501
    E731  # allow lambda functions
    F841  # allow unused local variables
    QGS105  # Do not pass iface (QgisInterface) as an argument, instead import it: 'from qgis.utils import iface'
    W503 # allow line break before binary operator


max-line-length=120
max-complexity = 10

exclude =
    # No need to traverse our git directory
    .git,
    # skip submodules
    enmapbox/qgispluginsupport
    enmapbox/apps/lmuapps
    # skip external applications (too much work)
    enmapbox/apps  # external code
    enmapbox/coreapps/_classic  # will be removed soon
    enmapbox/coreapps/enmapboxapplications  # will be removed soon
    tests/src/otherapps
    site-packages
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    docs/source/conf.py,
    scripts,
    # This contains our built documentation
    build, docs, test-reports, test-outputs, qgisresources
    # skip autogenerated files
    *_rc.py
    tests/testdata/__init__.py

    # no need to check GEE collection definitions
    enmapbox/coreapps/geetimeseriesexplorerapp/user_collections
    enmapbox/coreapps/geetimeseriesexplorerapp/standard_collections

    # uncomment those to hide Benjamins corr apps
    # enmapbox/coreapps/vrtbuilderapp enmapbox/coreapps/metadataeditorapp enmapbox/coreapps/imagecubeapp
    # enmapbox/coreapps/eotimeseriesviewerapp enmapbox/coreapps/reclassifyapp


per-file-ignores =
    #  QGS104 Use 'import qgis.PyQt.pyrcc_main' instead of 'import PyQt5.pyrcc_main'
    # just not available in OSGeo4W installations
    # script should run immediately which site.addsitedir(REPO) before other imports
    scripts/*.py : E402
    enmapbox/__main__.py: E402
    enmapbox/gui/__init__.py: F401
    enmapbox/gui/utils.py: F401